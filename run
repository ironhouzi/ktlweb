#!/bin/bash

# pg container created with:
# docker run \
#     --name ktlweb_db \
#     -P \
#     -e POSTGRES_PASSWORD=`gpass.sh ktlweb_db 2>&1` \
#     -e POSTGRES_DB=ktlweb_db \
#     -d \
#     postgres:9.6.1


# es container created with:
# docker run --name ktlweb_es -P -d elasticsearch:1


export DJANGO_SETTINGS_MODULE=ktlweb.settings.dev
export DEBUG=True
export SECRET_KEY="$(gpass.sh ktlweb_secret_key 2>&1)"
export DB=ktlweb_db
export DATABASE_URL="postgres://postgres:$(gpass.sh ktlweb_db 2>&1)@localhost:$(docker port $DB | cut -d : -f2)/$DB"
export ES_URL="http://localhost:$(docker port ktlweb_es | head -n1 | cut -d : -f2)"
unset DB

if [ -e ~/store/secrets/ktlweb/envvars ]; then
	while read -r line; do export "$line"; done < ~/store/secrets/ktlweb/envvars
fi

./manage.py "$@"
